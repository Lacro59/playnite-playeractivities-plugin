<UserControl x:Class="PlayerActivities.Views.PaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerActivities.Views" 
             xmlns:controls="clr-namespace:PlayerActivities.Controls"
             xmlns:enum="clr-namespace:PlayerActivities.Models" 
             xmlns:convertersshared="clr-namespace:CommonPluginsShared.Converters" 
             xmlns:controls1="clr-namespace:CommonPluginsShared.Controls" 
             xmlns:controls2="clr-namespace:CommonPluginsControls.Controls" 
             xmlns:playnitecontrols="clr-namespace:CommonPluginsControls.PlayniteControls" 
             xmlns:plugins="clr-namespace:CommonPluginsShared.Plugins" 
             xmlns:converters="clr-namespace:CommonPlayniteShared.Converters"
             mc:Ignorable="d" d:DesignHeight="740" d:DesignWidth="1280"
             d:DataContext="{d:DesignInstance Type=local:PaViewData}">

    <UserControl.Resources>
        <convertersshared:LocalDateConverter x:Key="LocalDateConverter" />
        <convertersshared:PlayTimeToStringConverterWithZero x:Key="PlayTimeToStringConverterWithZero" />
        <convertersshared:LocalDateTimeConverter x:Key="LocalDateTimeConverter" />
        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
            <Setter Property="ContextMenu">
                <Setter.Value>
                    <ContextMenu>
                        <MenuItem
                            Visibility="{Binding GameContext.IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding DataContext.StartGameCommand, Source={x:Reference Name=PART_LbTimeLine}}"
                            CommandParameter="{Binding GameContext}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xec74;" FontFamily="{DynamicResource FontIcoFont}" Width="20" Margin="-5,0,0,0" />
                                    <TextBlock Text="{DynamicResource LOCPlayGame}" />
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        <MenuItem
                            Visibility="{Binding GameContext.IsInstalled, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"
                            Command="{Binding DataContext.InstallGameCommand, Source={x:Reference Name=PART_LbTimeLine}}"
                            CommandParameter="{Binding GameContext}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xef08;" FontFamily="{DynamicResource FontIcoFont}" Width="20" Margin="-5,0,0,0" />
                                    <TextBlock Text="{DynamicResource LOCInstallGame}" />
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                        
                        <MenuItem
                            Command="{Binding DataContext.ShowGameInLibraryCommand, Source={x:Reference Name=PART_LbTimeLine}}"
                            CommandParameter="{Binding GameContext}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xef19;" FontFamily="{DynamicResource FontIcoFont}" Width="20" Margin="-5,0,0,0" />
                                    <TextBlock Text="{DynamicResource LOCPaShowGameInLibrary}" />
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>

                        <Separator />

                        <MenuItem
                            Command="{Binding DataContext.RefreshGameDataCommand, Source={x:Reference Name=PART_LbTimeLine}}"
                            CommandParameter="{Binding GameContext}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xefd1;" FontFamily="{DynamicResource FontIcoFont}" Width="20" Margin="-5,0,0,0" />
                                    <TextBlock Text="{DynamicResource LOCPaRefreshGameData}" />
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>

                        <MenuItem 
                            Visibility="{Binding ShowSuccessStoryMenu, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding DataContext.ShowGameSuccessStoryCommand, Source={x:Reference Name=PART_LbTimeLine}}"
                            CommandParameter="{Binding GameContext}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe820;" FontFamily="{DynamicResource FontIcoFont}" Width="20" Margin="-5,0,0,0" />
                                    <TextBlock Text="{DynamicResource LOCPaSuccessStoryPluginView}" />
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>

                        <MenuItem 
                            Visibility="{Binding ShowHowLongToBeatMenu, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding DataContext.ShowGameHowLongToBeatCommand, Source={x:Reference Name=PART_LbTimeLine}}"
                            CommandParameter="{Binding GameContext}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe90d;" FontFamily="{DynamicResource CommonFont}" Width="20" Margin="-5,0,0,0" />
                                    <TextBlock Text="{DynamicResource LOCPaHowLongToBeatPluginView}" />
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>

                        <MenuItem 
                            Visibility="{Binding ShowScreenshotsVisualizerMenu, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Command="{Binding DataContext.ShowGameScreenshotsVisualizerCommand, Source={x:Reference Name=PART_LbTimeLine}}"
                            CommandParameter="{Binding GameContext}">
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xea38;" FontFamily="{DynamicResource CommonFont}" Width="20" Margin="-5,0,0,0" />
                                    <TextBlock Text="{DynamicResource LOCPaScreenshotsVisualizerPluginView}" />
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </ContextMenu>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid Name="PART_DataLoad">
            <ProgressBar IsIndeterminate="True" Width="350" Height="40" />
            <TextBlock Text="{DynamicResource LOCLoadingLabel}"
                    Style="{DynamicResource BaseTextBlockStyle}"
                    HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>

        <Grid Name="PART_Data">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Filter -->
                <Border Grid.Row="0" BorderThickness="{DynamicResource PopupBorderThickness}" BorderBrush="{DynamicResource NormalBorderBrush}">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="250" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0" Content="{DynamicResource LOCSearchLabel}" FontSize="16" />
                        <playnitecontrols:SearchBox Grid.Column="2" x:Name="TextboxSearch" TextChanged="TextboxSearch_TextChanged" />

                        <Label Grid.Column="4" Content="{DynamicResource LOCSourceLabel}" FontSize="16" />
                        <ComboBox Grid.Column="6" Name="FilterSource" ItemsSource="{Binding FilterSourceItems}" IsEditable="True" IsReadOnly="True">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Name="chkSource" Checked="ChkSource_Checked" Unchecked="ChkSource_Unchecked" Tag="{Binding SourceNameShort}"
                                              Content="{Binding SourceName}" IsChecked="{Binding isCheck, Mode=TwoWay}" FontFamily="{DynamicResource CommonFont}">
                                    </CheckBox>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Player time line -->
                <Grid Name="PART_GridContener" Grid.Row="2">
                    <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                             ScrollViewer.VerticalScrollBarVisibility="Auto" 
                             Name="PART_LbTimeLine"
                             ItemsSource="{Binding ItemsSource}" BorderThickness="0"
                             Width="{Binding ElementName=PART_GridContener, Path=ActualWidth}"
                             Height="{Binding ElementName=PART_GridContener, Path=ActualHeight}">

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <Grid>
                                                <Border Padding="{TemplateBinding Padding}" Background="Transparent">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="3,0,0,0" />
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="Selector.IsSelected" Value="True">
                                        <Setter Property="Foreground" Value="{DynamicResource TextBrushDark}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" BorderThickness="{DynamicResource PopupBorderThickness}" BorderBrush="{DynamicResource NormalBorderBrush}">
                                    <Grid Margin="5" Name="PART_Root" Tag="{Binding}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <controls1:ImageAsync Grid.Column="0" Source="{Binding CoverImage}" Stretch="Uniform"
                                                              ToolTip="{Binding GameContext.Name}" 
                                                              MaxHeight="100"
                                                              VerticalAlignment="Top" HorizontalAlignment="Center" />

                                        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" MaxHeight="550">
                                            <ItemsControl Name="PART_ItemsControl" ItemsSource="{Binding ActivitiesOrdered}" >
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid Name="PART" Tag="{Binding}" Margin="0,0,0,10">

                                                            <!-- AchievementsUnlocked  -->
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=PART, Path=Tag.Type}" Value="{x:Static enum:ActivityType.AchievementsUnlocked}">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Grid.Style>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="auto" />
                                                                    <RowDefinition Height="5" />
                                                                    <RowDefinition Height="auto" />
                                                                </Grid.RowDefinitions>

                                                                <Label Grid.Row="0" Grid.Column="0" Content="{Binding ElementName=PART_Root, Path=Tag.SourceIcon}" 
                                                                       FontFamily="{DynamicResource CommonFont}" Foreground="Gray" />
                                                                <Label Grid.Row="0" Grid.Column="2" Content="{Binding Value}" ContentStringFormat="{DynamicResource LOCPaSuccessStoryUnlocked}" />
                                                                <Label Grid.Row="0" Grid.Column="4" ToolTip="{Binding DateActivity, Converter={StaticResource LocalDateConverter}}" 
                                                                       Content="{Binding TimeAgo}" Foreground="Gray" />

                                                                <controls:SuccessStoryPluginCompactUnlocked Grid.Row="2" Grid.ColumnSpan="7"
                                                                                            GameContext="{Binding ElementName=PART_Root, Path=Tag.GameContext}"
                                                                                            DateUnlocked="{Binding ElementName=PART, Path=Tag.DateActivity}" />
                                                            </Grid>

                                                            <!-- AchievementsGoal  -->
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=PART, Path=Tag.Type}" Value="{x:Static enum:ActivityType.AchievementsGoal}">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Grid.Style>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <Label Grid.Row="0" Grid.Column="0" Content="{Binding ElementName=PART_Root, Path=Tag.SourceIcon}" 
                                                                   FontFamily="{DynamicResource CommonFont}" Foreground="Gray" />
                                                                <Label Grid.Row="0" Grid.Column="2" Content="{Binding Value}" ContentStringFormat="{DynamicResource LOCPaSuccessStoryGoal}" />
                                                                <Label Grid.Row="0" Grid.Column="4" ToolTip="{Binding DateActivity, Converter={StaticResource LocalDateConverter}}" 
                                                                       Content="{Binding TimeAgo}" Foreground="Gray" />
                                                            </Grid>

                                                            <!-- ScreenshotsTaked  -->
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=PART, Path=Tag.Type}" Value="{x:Static enum:ActivityType.ScreenshotsTaked}">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Grid.Style>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="auto" />
                                                                    <RowDefinition Height="5" />
                                                                    <RowDefinition Height="auto" />
                                                                </Grid.RowDefinitions>

                                                                <Label Grid.Row="0" Grid.Column="0" Content="{Binding ElementName=PART_Root, Path=Tag.SourceIcon}" 
                                                                       FontFamily="{DynamicResource CommonFont}" Foreground="Gray" />
                                                                <Label Grid.Row="0" Grid.Column="2" Content="{Binding Value}" ContentStringFormat="{DynamicResource LOCPaScreenshotsTaked}" />
                                                                <Label Grid.Row="0" Grid.Column="4" ToolTip="{Binding DateActivity, Converter={StaticResource LocalDateConverter}}" 
                                                                       Content="{Binding TimeAgo}" Foreground="Gray" />

                                                                <controls:ScreenshotsVisualizerPluginListScreenshots Grid.Row="2" Grid.ColumnSpan="7"
                                                                                            GameContext="{Binding ElementName=PART_Root, Path=Tag.GameContext}"
                                                                                            DateTaked="{Binding ElementName=PART, Path=Tag.DateActivity}" />
                                                            </Grid>

                                                            <!-- PlaytimeFirst  -->
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=PART, Path=Tag.Type}" Value="{x:Static enum:ActivityType.PlaytimeFirst}">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Grid.Style>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <Label Grid.Row="0" Grid.Column="0" Content="{Binding ElementName=PART_Root, Path=Tag.SourceIcon}" 
                                                                       FontFamily="{DynamicResource CommonFont}" Foreground="Gray" />
                                                                <Label Grid.Row="0" Grid.Column="2" Content="{DynamicResource LOCPaPlaytimeFirst}" />
                                                                <Label Grid.Row="0" Grid.Column="4" ToolTip="{Binding DateActivity, Converter={StaticResource LocalDateConverter}}" 
                                                                       Content="{Binding TimeAgo}" Foreground="Gray" />
                                                            </Grid>

                                                            <!-- PlaytimeGoal -->
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=PART, Path=Tag.Type}" Value="{x:Static enum:ActivityType.PlaytimeGoal}">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Grid.Style>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <Label Grid.Row="0" Grid.Column="0" Content="{Binding ElementName=PART_Root, Path=Tag.SourceIcon}" 
                                                                       FontFamily="{DynamicResource CommonFont}" Foreground="Gray" />
                                                                <Label Grid.Row="0" Grid.Column="2" Content="{Binding Value}" ContentStringFormat="{DynamicResource LOCPaPlaytimeGoal}" />
                                                                <Label Grid.Row="0" Grid.Column="4" ToolTip="{Binding DateActivity, Converter={StaticResource LocalDateConverter}}" 
                                                                       Content="{Binding TimeAgo}" Foreground="Gray" />
                                                            </Grid>

                                                            <!-- HowLongToBeatCompleted -->
                                                            <Grid>
                                                                <Grid.Style>
                                                                    <Style TargetType="Grid">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=PART, Path=Tag.Type}" Value="{x:Static enum:ActivityType.HowLongToBeatCompleted}">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Grid.Style>

                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="*" />
                                                                    <ColumnDefinition Width="10" />
                                                                    <ColumnDefinition Width="auto" />
                                                                </Grid.ColumnDefinitions>

                                                                <Label Grid.Row="0" Grid.Column="0" Content="{Binding ElementName=PART_Root, Path=Tag.SourceIcon}" 
                                                                       FontFamily="{DynamicResource CommonFont}" Foreground="Gray" />
                                                                <Label Grid.Row="0" Grid.Column="2" Content="{DynamicResource LOCPaHowLongToBeatCompleted}" />
                                                                <Label Grid.Row="0" Grid.Column="4" ToolTip="{Binding DateActivity, Converter={StaticResource LocalDateConverter}}" 
                                                                       Content="{Binding TimeAgo}" Foreground="Gray" />
                                                            </Grid>

                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>

            <!-- List of friends -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                
                <Grid Name="PART_GridFriendsContener" Grid.Row="0">
                    <controls1:ListViewExtend Height="{Binding ElementName=PART_GridFriendsContener, Path=ActualHeight}"
                                              FontSize="24" Style="{StaticResource {x:Type ListView}}" 
                                              SortingEnable="True" SortingDefaultDataName="Stats.HoursPlayed" SortingSortDirection="Descending"
                                              SelectionChanged="ListViewExtend_SelectionChanged"
                                              ItemsSource="{Binding FriendsSource}">

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="50">
                                    <GridViewColumnHeader Content="{DynamicResource LOCGameIconTitle}" Tag="noSort" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Image HorizontalAlignment="Center" Height="32" VerticalAlignment="Center" Width="32" 
                                                       Source="{Binding FriendsAvatar, IsAsync=True}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="0" DisplayMemberBinding="{Binding FriendPseudo}">
                                    <controls1:GridViewColumnHeaderExtend Style="{StaticResource {x:Type GridViewColumnHeader}}" IsHitTestVisible="False" />
                                </GridViewColumn>
                                <GridViewColumn Width="140">
                                    <GridViewColumnHeader Content="{DynamicResource LOCGameNameTitle}" Tag="FriendPseudo" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock ToolTip="{Binding FriendsLink}">
                                                <Hyperlink Command="{Binding NavigateUrl}" CommandParameter="{Binding FriendsLink}">
                                                    <controls2:TextBlockTrimmed Text="{Binding FriendPseudo}" Style="{DynamicResource ListExtendStyleTextBlock}" />
                                                </Hyperlink>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="0" DisplayMemberBinding="{Binding ClientName}">
                                    <controls1:GridViewColumnHeaderExtend Style="{StaticResource {x:Type GridViewColumnHeader}}" IsHitTestVisible="False" />
                                </GridViewColumn>
                                <GridViewColumn Width="75">
                                    <GridViewColumnHeader Name="lvSourceIcon" Content="{DynamicResource LOCSourceLabel}" Tag="ClientName" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding ClientIcon}" FontFamily="{DynamicResource CommonFont}" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Stretch" FontSize="30" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="140" DisplayMemberBinding="{Binding AcceptedAt, Converter={StaticResource LocalDateTimeConverter}}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCDateAddedLabel}" />
                                </GridViewColumn>

                                <GridViewColumn Width="140" DisplayMemberBinding="{Binding Stats.GamesOwned}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCPaGameOwned}" />
                                </GridViewColumn>

                                <GridViewColumn Width="140" DisplayMemberBinding="{Binding Stats.GamesCompleted}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCPaGameCompleted}" />
                                </GridViewColumn>

                                <GridViewColumn Width="70" DisplayMemberBinding="{Binding Stats.Achievements}">
                                    <GridViewColumnHeader Content="🏆" />
                                </GridViewColumn>

                                <GridViewColumn Width="140" DisplayMemberBinding="{Binding Stats.Playtime, Converter={StaticResource PlayTimeToStringConverterWithZero}}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCStatsTotalPlayTime}" />
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </controls1:ListViewExtend>
                </Grid>

                <Grid Name="PART_GridFriendsDetailsContener" Grid.Row="2">
                    <controls1:ListViewExtend Height="{Binding ElementName=PART_GridFriendsDetailsContener, Path=ActualHeight}"
                                              FontSize="24" Style="{StaticResource {x:Type ListView}}" 
                                              SortingEnable="True" SortingDefaultDataName="Name" SortingSortDirection="Ascending"
                                              x:Name="PART_LvFriendsDetails"
                                              ItemsSource="{Binding FriendsDetailsSource}">

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="0" DisplayMemberBinding="{Binding Name}">
                                    <controls1:GridViewColumnHeaderExtend Style="{StaticResource {x:Type GridViewColumnHeader}}" IsHitTestVisible="False" />
                                </GridViewColumn>
                                <GridViewColumn Width="170">
                                    <GridViewColumnHeader Content="{DynamicResource LOCGameNameTitle}" Tag="Name" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock ToolTip="{Binding Link}">
                                                <Hyperlink Command="{Binding NavigateUrl}" CommandParameter="{Binding Link}">
                                                    <controls2:TextBlockTrimmed Text="{Binding Name}" Style="{DynamicResource ListExtendStyleTextBlock}" />
                                                </Hyperlink>
                                            </TextBlock>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="0" DisplayMemberBinding="{Binding IsCommun}">
                                    <controls1:GridViewColumnHeaderExtend Style="{StaticResource {x:Type GridViewColumnHeader}}" IsHitTestVisible="False" />
                                </GridViewColumn>
                                <GridViewColumn Width="90">
                                    <GridViewColumnHeader Content="{DynamicResource LOCPaCommun}" Tag="IsCommun" />
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsCommun}" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>

                                <GridViewColumn Width="140" DisplayMemberBinding="{Binding Playtime, Converter={StaticResource PlayTimeToStringConverterWithZero}}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCPaFriendPlaytime}" />
                                </GridViewColumn>

                                <GridViewColumn Width="140" DisplayMemberBinding="{Binding UsPlaytime, Converter={StaticResource PlayTimeToStringConverterWithZero}}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCPaYourPlaytime}" />
                                </GridViewColumn>
                                
                                <GridViewColumn Width="100" DisplayMemberBinding="{Binding Achievements}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCPaFriendAchievements}" />
                                </GridViewColumn>

                                <GridViewColumn Width="80" DisplayMemberBinding="{Binding UsAchievements}">
                                    <GridViewColumnHeader Content="{DynamicResource LOCPaYourAchievements}" />
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </controls1:ListViewExtend>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="1" Content="{DynamicResource LOCCommonLastUpdate}" />
                    <Label Grid.Column="3" Content="{Binding LastFriendsRefresh, Converter={StaticResource LocalDateTimeConverter}}" />
                    <Button Name="PART_BtFriends" Grid.Column="5" Content="{DynamicResource LOCPaRefreshFriendsData}" Click="Button_RefreshFriendsData" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
